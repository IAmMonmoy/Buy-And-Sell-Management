
@{
    ViewBag.Title = "FindRevenue";
}

<h2>FindRevenue</h2>

<div class="row">
    <div class="col-md-offset-2 col-md-8">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            if (IsPost)
            {
                <h2>Total Revenue Is</h2>
                <h2>@ViewBag.sum</h2>
            }
            else
            {

                <div class="form-group">
                    @Html.Label("Enter Date", new { @class = "col-md-offset-2 control-label col-md-2" })
                    @Html.TextBox("date", null, new
               {
                   @class = "form-control col-md-6",
                   type = "date",
                   @value = DateTime.Now
               })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-5 col-md-8">
                        <input id="TotalButon" type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div>
            }

        }
    </div>
</div>